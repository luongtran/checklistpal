<div id="signupfree">
  <div class="clearfix">
    <div class="divine50">
      <div class="signoption row-fluid">
        <div class="signuppanel">
          <% content_for :head do %>
          <%= tag :meta, :name => "stripe-key", :content => "pk_test_hNltPbfQGTFuyleT8Rw5W8R5" %>
