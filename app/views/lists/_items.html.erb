
<%#
# To change this template, choose Tools | Templates
# and open the template in the editor.
%>
<% if @list.tasks.length %>
  <% @list.tasks.items.each do |task| 
    index = 0 %>
    <div class="taskinfo handle <%= index == (@list.tasks.items.length - 1) ? 'last' : '' %>" id="task_<%= task.id %>">
    <li class="handle <%= index == (@list.tasks.items.length - 1) ? 'last' : '' %>" id="task_<%= task.id %>">
      <div id="delete_error" class="text-error hide">You have no permission to delete this task</div>
      <div class="items">
        <div class="checkbox">
          <span class="mark">
            <%= form_tag(complete_task_path(@list.id, task.id), :remote => true) do |f| %>
              <%= check_box_tag 'mark_complete', task.id , task.completed , :class => 'checkbox mark_comp' ,:data_target => @list.id %>
            <% end %>
          </span>
          <span class="task-des">
            <% if !task.completed %> <!-- Render task incompleted -->
              <div class="item-title" id="item_title_<%= task.id %>" data-url="<%= edit_task_path(@list.id, task.id) %>" ><%= link_to truncate(task.description,:length => 50) , view_task_path(@list.id,task.id),:class => "task_name",:target => "_blank" %></div>
            <% else %>                <!-- Render task completed -->
              <div class="item-title item-completed" id="item_title_<%= task.id %>" data-url="<%= edit_task_path(@list.id, task.id) %>" ><%= link_to task.description , view_task_path(@list.id,task.id),:class => "task_name item-completed",:target => "_blank" %></div>
            <% end %>
          </span>
          <% if task.hasduedate && task.due_date != nil %>
          <span class="due_date_show">
            <span class="due_date_bt">Due <%= task.due_date.to_time.strftime("%Y-%m-%d") %></span>
          </span>
          <% else %>
            <span class="due_date_show hidden">
          </span>
          <% end %>
          <% if task.comments.count > 0 %>
          <span class="number_comment" id="number_comment_<%= task.id %>">(<%= task.comments.count %> Comments)</span>
          <% else %>
          <span class="number_comment hidden" id="number_comment_<%= task.id %>">(<%= task.comments.count %> Comments)</span>
          <% end %>
        </div>
        <span class="action">
          <a href="javascript:;" class="show_comment_bt">Comment</a>
            <%= form_tag(update_due_date_path(@list.id, task.id) , :remote => true) do |f| %>
              <input type="text" name="due_date_value" value="<%= task.due_date %>" data-date-format="yyyy-mm-dd" class="datepicker inputdate" id="due_date_<%= task.id %>" placeholder="Due date">
            <% end %>
          <%= link_to "Edit", "javascript:;",:class => 'btn-edit' ,:style => "text-decoration: underline" %>
          <%= link_to "Delete", delete_task_path(@list.id,task.id),:class => 'btn-delete' ,:style => "text-decoration: underline", :remote => true %>
        </span>
        <% if current_user %>          
        <span class="comment-add" id ="comment_add_<%= task.id %>">
            <%= render :partial => "comments/comment_task", :locals => {:task => task} %>
          </span> 
        <% end %>
      </div>
    </li>
    </div>
    <% 
    index +=1
    end %>
<% end %>