<div class="section clearfix">      <div class="pull-right">        <div id="quickmenu">          <div class="clearfix"><a href="<%= root_path %>" class="pull-left">+ New</a><a href="#saveform" data-toggle="modal" data-remote="true" class="pull-left">SAVE</a><%= link_to_function("PRINT", "javascript:print()",html_options={:class => "pull-left",:target => "_blank"}) %></div>          </div>      </div>      <div class="pull-left">        <div id="logo"><img alt="checklistpal" src="../assets/logo.png">          <span class="list-name" data-url="<%= edit_list_path(@list)%>">&nbsp;<%= @list.name %></span>          <a href="javascript:;" class="logo-editbt">(Edit)</a>         </div>      </div>    </div>    <div class="section clearfix">      <div id="todolistsearch">        <div class="searchbox">          <%= simple_form_for [@list, @list.tasks.new ] do |form| %>            <div class="row-fluid">              <%= form.text_field :description, :class => "input-block-level searchboxtodolist" %>              <%= form.submit :value => "add +",  :class => "btn btn-primary" %>            </div>          <% end %>        </div>                <% if current_user %>          <% is_created_user =  current_user.id == @list.user_id ? true : false%>          <% if is_created_user %>            <%= link_to 'Invite user', find_invite_path(@list.id), :class => 'btn btn-info'  %>            <hr/>          <% end %>        <% end %>                <div class="todolist">          <div class="row-fluid">            <span class="span12">              <div class="notice" id="notice">              </div>              <ul class="unstyled" id="list-items" data-update-url="<%= sort_tasks_path %>">                <%= render :partial => "lists/items" %>              </ul>            </span>          </div>        </div>      </div>    </div><!-- Modal save form -->  <div class="modal hide fade" id="saveform">	<div class="modal-header">		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>		<h3 id="myModalLabel">How to Save Todo List</h3>	</div>	<div class="modal-body text-center">		<h4 class="text-success">Please press Ctr + D button</p><p class="text-success"> to save your list to browser bookmark</h4>	</div>	<div class="modal-footer">		<button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>	</div></div>