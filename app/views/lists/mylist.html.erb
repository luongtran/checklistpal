<div class="section clearfix">
  <div class="pull-right">
    <div id="quickmenu">
      <div class="clearfix"><a href="<%= root_path %>" class="pull-left">+ New</a><a href="#saveform" data-toggle="modal" data-remote="true" class="pull-left">SAVE</a><a href="#" class="pull-left">PRINT</a></div>
    </div>
  </div>
  <div class="pull-left">
    <div id="logo"><img alt="checklistpal" src="../assets/logo.png"><span>&nbsp;checklist<span>pal</span></span></div>
  </div>
</div>
<hr class="divider">
<div class="section clearfix">
  <div id="mylist">
    <div class="clearfix">
      <div class="divine50">
        <div class="signoption row-fluid">
          <div class="signuppanel">
            <div class="searchmini clearfix">
              <input type="text" class="textinput input-medium">
              <input type="submit" value="" class="submitbt">
            </div>
            <div class="panel">
              <h3>Created list</h3>
              <% @lists.each do |list| %>
              <label class="checkbox">
                <input type="checkbox"><%= link_to list.name, list %><span><i><%= list.created_at.to_time.strftime("%m/%d/%Y")%></i></span>
              </label>
              <% end %>
              <hr/>
              <% if @friend_lists.length > 0 %>
              <h3>Invitation list</h3>
              <% @friend_lists.each do |list| %>
              <label class="checkbox">
                <input type="checkbox"><%= link_to list.name, list %><span><i><%= list.created_at.to_time.strftime("%m/%d/%Y")%></i></span>
              </label>
              <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
