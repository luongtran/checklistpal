<% if @request_valid %>
    <% if !@limited %>
        <% if !@already_connection %>
                <% if @success %>
                    $("#inviting_notice_area").empty();
                    $("#inviting_notice_area").addClass("alert alert-success");
                    $("#inviting_notice_area").text("Invitation sent to <%= @invite_email %>").fadeIn(300).delay(3000).fadeOut(300);
                <% else %>
                    $("#inviting_notice_area").empty();
                    $("#inviting_notice_area").addClass("alert alert-danger");
                    $("#inviting_notice_area").text("Sorry, sent invitation failed.").fadeIn(300).delay(3000).fadeOut(300);
                <% end %>
        <% else %>
            $("#inviting_notice_area").empty();
            $("#inviting_notice_area").addClass("alert alert-success");
            $("#inviting_notice_area").text("<%= "The list already invited to #{@invite_email.nil? ? @invite_user_name : @invite_email }" %>").fadeIn(300).delay(3000).fadeOut(300);
        <% end %>
    <% else %>
        $("#inviting_notice_area").empty();
        $("#inviting_notice_area").addClass("alert alert-success");
        $("#inviting_notice_area").text("You have to upgrade account to invite more people.").fadeIn(300).delay(4000).fadeOut(300);
    <% end%>

<% else %>
    $("#inviting_notice_area").empty();
    $("#inviting_notice_area").addClass("alert alert-danger");
    $("#inviting_notice_area").text("Request is invalid.").fadeIn(300).delay(2000).fadeOut(300);
<% end %>




<% if false %>
<!-- Tra ve ket qua tim kiem -->
<% if @invite_yourself %>
$("#list_invites").addClass("alert alert-success");
$("#list_invites").text("Can't invite yourself!").fadeIn(300).delay(1000).fadeOut(300);
<% else %>
<% if @has_list_users %>
$("#list_invites").html('<%= escape_javascript(render 'list_invites') %>')
<% else %>
<% if @has_over_connect %>
$("#list_invites").text("You have to upgrade account to invite more people.");
$("#list_invites").addClass("alert alert-success");
<% else %>
<% if @success %>
$("#list_invites").text("Invitation sent to <%= @user.email %>");
$("#list_invites").addClass("alert alert-success");
<% else %>
$("#list_invites").text("No result match");
<% end %>
<% end %>
<% end %>
<% end %>


<% end %>