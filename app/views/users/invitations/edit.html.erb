<div class="section clearfix">
  <div class="pull-left">
    <div id="logo">
      <%= image_tag "blue_logo.png" %>
    </div>
  </div>
</div>
<h3>Please create a password to accept and sign in</h3>
<%= simple_form_for @user, :url => invitation_path(resource_name), :html => {:method => :put} do |f| %>
    <%= f.hidden_field 'invitation_token', :value => @token %>
    <label> *Name </label>
    <%= f.text_field :name, :required => true, :value => "" %>
    <%= f.input :password, :required => true %>
    <%= f.input :password_confirmation %>
    <%= f.submit "Save My Password", :class => "btn btn-primary" %>
<% end %>

