<!DOCTYPE html>
<html>
  <head>
    <title>Tudli</title>
    
    <%= stylesheet_link_tag    "bootstrap.min", :media => "all" %>
    <%= stylesheet_link_tag    "bootstrap-responsive.min", :media => "all" %>
    <%= stylesheet_link_tag    "combine", :media => "all" %>
    <%= stylesheet_link_tag    "fontkit/proximanova/font", :media => "all" %>
    <%= stylesheet_link_tag    "fontkit/OpenSan/font", :media => "all" %>
    <%= stylesheet_link_tag    "fontkit/awesome/css/font-awesome.min", :media => "all" %>
    <%= stylesheet_link_tag    "jquery-ui-1.10.3.custom.min", :media => "all" %>
    <%= stylesheet_link_tag    "addonfix", :media => "all" %>
    <%= stylesheet_link_tag    "print" , :media => "print" %>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.8.1/jquery.min.js", "https://ajax.googleapis.com/ajax/libs/jqueryui/1.10.0/jquery-ui.min.js", "rails" %>
    <%= javascript_include_tag "https://js.stripe.com/v1/", "application" %>
    <%= javascript_include_tag "bootstrap.min" %>
    <%= javascript_include_tag "registrations"%>
    <%= javascript_include_tag "lists" %>
    <%= javascript_include_tag "jquery.externalscript" %>
    <%= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY %>
    <%= csrf_meta_tag %>
    <%#*<link rel="shortcut icon" href="../assets/blue_logo.png"/>%>
  </head>
  <script type="text/javascript">Stripe.setPublishableKey("pk_test_hNltPbfQGTFuyleT8Rw5W8R5");</script>
  <body>
    <% if !current_user %>
      <div class="path_top_logout clearfix">
        <div class="pull-right">
          <div id="accountpanel">
            <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'clearfix' }) do |f| %>
              <div class="pull-left"><span class="inline">
                  <%= link_to "Free Sign Up", signup_options_path ,:class =>"btn-small btn-primary" %> 
                </span></div>
              <div class="pull-left">
                <%= f.email_field :email, :placeholder => "email", :class => "input-small" , :autofocus => true %>
              </div>
              <div class="pull-left">                
                <%= f.password_field :password , :placeholder => "password", :class => "input-small" %>
              </div>
              <div class="pull-left">
                <input type="submit" value="" class="submitbt">
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% else %>
      <div class="path_top_login clearfix">
        <div class="pull-left">
          <div id="white-logo">
            <div class="clearfix">
              <span class="inline">
                <%= image_tag "white_logo.png" %>
              </span>
            </div>
          </div>
        </div>
        <div class="pull-right">
          <div id="accountpanel" >
            <div class="clearfix">
              <span class="inline">
                <%= link_to "My Account" ,my_account_path,:style =>"color:white !important;"%>
              </span> 
              <span class="inline">&nbsp;&nbsp;
                <%= link_to "Logout" ,destroy_user_session_path,:style =>"color:white !important;" %>
              </span>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <div class="container">
      <div class="webpage">
        <div class="webpage-inner">
          <%= render 'layouts/messages' %>
          <%= yield %>
          <%= yield :javascript %>
        </div>
      </div>
      <div class="footer">
        <div class="clearfix">
          <div class="pull-left">© Checklistpal.com</div>
          <div class="pull-right">
            <ul class="unstyled footermenu">
              <li><a href="#supportform" data-toggle="modal">SUPPORT</a></li>
              <li><a href="#aboutform" data-toggle="modal">About</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <!-- Modal save form -->
    <div class="modal hide fade" id="saveform">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">How to Save Todo List</h3>
      </div>
      <div class="modal-body text-center">
        <h4 class="text-success">Please press Ctr + D button</p><p class="text-success"> to save your list to browser bookmark</h4>
      </div>
      <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
      </div>
    </div>
    <!-- Modal support form -->
    <div class="modal hide fade" id="supportform">
      <div class="modal-body text-center">
        <p class="text-success">If you have some question . please send we an email to : support@tudli.com or call : 0888.888.888 </p>
      </div>
      <div class="modal-footer">
        <button class="btn btn-small btn-info" data-dismiss="modal" aria-hidden="true">Close</button>
      </div>
    </div>
    <!-- Modal about form -->
    <div class="modal hide fade" id="aboutform">
      <div class="modal-body text-center">
        <p class="text-success">About us .......</p>
      </div>
      <div class="modal-footer">
        <button class="btn btn-small btn-info" data-dismiss="modal" aria-hidden="true">Close</button>
      </div>
    </div>
  </body>
</html>