<!DOCTYPE html>
<html>
  <head>
    <title>Check List Pal</title>
    <%= stylesheet_link_tag    "bootstrap.min", :media => "all" %>
    <%= stylesheet_link_tag    "bootstrap-responsive.min", :media => "all" %>
    <%= stylesheet_link_tag    "combine", :media => "all" %>
    <%= stylesheet_link_tag    "fontkit/proximanova/font", :media => "all" %>
    <%= stylesheet_link_tag    "fontkit/OpenSan/font", :media => "all" %>
    <%= stylesheet_link_tag    "fontkit/awesome/css/font-awesome.min", :media => "all" %>
    <%= stylesheet_link_tag    "application", :media => "all" %>    
    <%#= javascript_include_tag "application" %>
    <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js", "https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.14/jquery-ui.min.js", "rails" %>
    <%= javascript_include_tag "https://js.stripe.com/v1/", "application" %>
    <%= javascript_include_tag "jquery.externalscript" %>
    <%= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY %>
    <%= csrf_meta_tag %>
  </head>
  <script type="text/javascript">Stripe.setPublishableKey("pk_test_hNltPbfQGTFuyleT8Rw5W8R5");</script>
  <body>
    <div class="container">
      <div class="path_top clearfix">
        <div class="pull-right">
          <div id="accountpanel">
              <% if !current_user %>
                  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'clearfix' }) do |f| %>
                      <div class="pull-left"><span class="inline">
                        <%= link_to "Sign up", signup_options_path %>                    
                      </span></div>
                      <div class="pull-left">
                        <%= f.email_field :email, :placeholder => "email", :class => "input-small" , :autofocus => true %>
                      </div>
                      <div class="pull-left">                
                        <%= f.password_field :password , :placeholder => "password", :class => "input-small" %>
                      </div>
                      <div class="pull-left">
                      <input type="submit" value="" class="submitbt">
                      </div>
                    <% end %>
                   <% else %>
                      <div class="clearfix"><span class="inline">
                      <%= link_to "Sign out" ,destroy_user_session_path %>
                      </span>
                      </div>
                    <% end %>
          </div>
        </div>
      </div>
      <div class="webpage">
        <div class="webpage-inner">
          <%= render 'layouts/messages' %>
          <%= yield %>
          <%= yield :javascript %>
        </div>
      </div>
      <div class="footer">
        <div class="clearfix">
          <div class="pull-left">Â© Checklistpal.com</div>
          <div class="pull-right">
            <ul class="unstyled footermenu">
              <li><a href="#">SUPPORT</a></li>
              <li><a href="#">About</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <!-- Modal save form -->
    <div id="saveform" class="modal hide fade">
      <div class ="text-center">
        <span class="span6">
          <p class="text-error">Please press Ctr + D button</p><p class="text-error"> to save your list to browser bookmark</p>
        </span>
      </div>
    </div>
  </body>
</html>